{
  "manifest_version": 3,
  "name": "MyFi",
  "version": "1.0",
  "description": "Track spending from email receipts with AI",
  "permissions": ["identity", "identity.email", "storage", "tabs"],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://www.accounts.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["chart.js", "popup.js", "popup.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
